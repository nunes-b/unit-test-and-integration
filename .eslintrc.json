{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "implicit-arrow-linebreak": ["error", "beside"],
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "no-throw-literal": "error",
    "jest/globals": {
      "describe": "readonly",
      "it": "readonly",
      "expect": "readonly",
      "beforeEach": "readonly",
      "afterEach": "readonly"
    }
    
  }
}
